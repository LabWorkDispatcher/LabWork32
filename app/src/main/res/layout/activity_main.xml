<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05080D">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="39sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:text="WiFi and Battery statuses monitoring"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/batteryLevelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:gravity="left"
        android:text="Battery level:"
        android:paddingHorizontal="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/batteryLevelValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textSize="30sp"
        android:textColor="#888888"
        android:gravity="left"
        android:text="#bvalue"
        android:paddingHorizontal="15dp"
        app:layout_constraintLeft_toRightOf="@+id/batteryLevelText"
        app:layout_constraintTop_toBottomOf="@+id/textView1"/>

    <TextView
        android:id="@+id/batteryChargeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:gravity="left"
        android:text="Battery is charging:"
        android:paddingHorizontal="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/batteryLevelText" />

    <TextView
        android:id="@+id/batteryChargeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="#888888"
        android:gravity="left"
        android:text="#bcvalue"
        android:paddingHorizontal="15dp"
        app:layout_constraintLeft_toRightOf="@+id/batteryChargeText"
        app:layout_constraintTop_toBottomOf="@+id/batteryLevelValue"/>

    <TextView
        android:id="@+id/wifiStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:gravity="left"
        android:text="WiFi status:"
        android:paddingHorizontal="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/batteryChargeText" />

    <TextView
        android:id="@+id/wifiStatusValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="#888888"
        android:gravity="left"
        android:text="#wvalue"
        android:paddingHorizontal="15dp"
        app:layout_constraintLeft_toRightOf="@+id/wifiStatusText"
        app:layout_constraintTop_toBottomOf="@+id/batteryChargeValue" />

</androidx.constraintlayout.widget.ConstraintLayout>